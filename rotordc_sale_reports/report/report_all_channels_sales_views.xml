     <record id="report_sale_delivered_commands_view_pivot" model="ir.ui.view">
         <field name="name">report_sale_delivered_commands_view_pivot</field>
         <field name="model">sale.report</field>
         <field name="arch" type="xml">
            <pivot string="Quantity Delivered" disable_linking="True">
                <field name="team_id" type="col" />
                <field name="qty_delivered" type="measure" />
            </pivot>
         </field>
    </record>

    <record id="report_sale_top_sellers_view_pivot" model="ir.ui.view">
         <field name="name">report_sale_delivered_commands_view_pivot</field>
         <field name="model">sale.report</field>
         <field name="arch" type="xml">
            <pivot string="Top Sellers" disable_linking="True">
                <field name="team_id" type="col" />
                <field name="product_id" type="row" />
                <field name="price_total" type="measure" />
            </pivot>
         </field>
    </record>

    <record id="report_top_orders_view_pivot" model="ir.ui.view">
        <field name="name">report_top_orders_view_pivot</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
           <pivot string="Top Orders" disable_linking="True">
               <field name="name" type="row" />
               <field name="team_id" type="col" />
               <field name="amount_total" type="measure" />
           </pivot>
        </field>
   </record>
    <record id="report_confirmed_orders_view_pivot" model="ir.ui.view">
        <field name="name">report_confirmed_orders_view_pivot</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
           <pivot string="Confirmed Orders" disable_linking="True">
               <field name="team_id" type="col" />
           </pivot>
        </field>
   </record>

</odoo>
