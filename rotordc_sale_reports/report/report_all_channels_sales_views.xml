<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="report_total_sales_view_pivot" model="ir.ui.view">
         <field name="name">report.all.channels.sales.pivot</field>
         <field name="model">sale.report</field>
         <field name="arch" type="xml">
            <pivot string="Total Sales" disable_linking="True">
                <field name="team_id" type="col" />
                <field name="price_total" string="Total Price" type="measure" />
            </pivot>
         </field>
    </record>
