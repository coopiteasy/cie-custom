<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_supplier_certificate_tree">
        <field name="model">bao.supplier.certificate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="supplier_certificate_generator_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_supplier_certificate_form">
        <field name="model">bao.supplier.certificate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_confirm"
                        states="draft"
                        string="Generate"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="action_send_email"
                        state="confirmed"
                        string="Send Email"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="action_send_email"
                        state="sent"
                        string="Re-send Email"
                        type="object"
                    />
                    <button
                        name="action_cancel"
                        state="confirmed"
                        string="Cancel"
                        type="object"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed,sent"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label">Vendor Certificate Generator</span>
                        <h1 class="d-flex">
                            <field
                                name="name"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="partner_id"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                            <field
                                name="supplier_certificate_generator_id"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                        </group>
                        <group>
                            <field
                                name="start_date"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                            <field
                                name="end_date"
                                attrs="{'readonly':[('state','!=','draft')]}"
                            />
                        </group>
                    </group>
                    <group>
                        <field name="purchase_order_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_supplier_certificate" model="ir.actions.act_window">
        <field name="res_model">bao.supplier.certificate</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_id"
            ref="bao_supplier_certificate.view_supplier_certificate_tree"
        />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Vendor Certificates are generated by a Vendor Certificate Generator.
            </p>
        </field>
    </record>

</odoo>
