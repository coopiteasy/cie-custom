<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_supplier_certificate_generator_tree">
        <field name="model">bao.supplier.certificate.generator</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_supplier_certificate_generator_form">
        <field name="model">bao.supplier.certificate.generator</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_confirm"
                        states="draft"
                        string="Generate"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="action_send_email"
                        state="confirmed"
                        string="Send Email"
                        type="object"
                        attrs="{'invisible': [('sent', '=', True)]}"
                        class="oe_highlight"
                    />
                    <button
                        name="action_send_email"
                        state="confirmed"
                        string="Re-send Email"
                        type="object"
                        attrs="{'invisible': [('sent', '=', False)]}"
                    />
                    <button
                        name="action_cancel"
                        string="Cancel"
                        type="object"
                        attrs="{'invisible': [('sent', '=', True)]}"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            name="action_supplier_certificate"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible':[('state', 'in', ('draft',))]}"
                        >
                            <field
                                name="supplier_certificate_count"
                                widget="statinfo"
                                string="Certificates"
                            />
                            <field name="supplier_certificate_ids" invisible="1" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <span class="o_form_label">Vendor Certificate Generator</span>
                        <h1 class="d-flex">
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field
                            name="start_date"
                            attrs="{'readonly':[('state','!=','draft')]}"
                        />
                        <field
                            name="end_date"
                            attrs="{'readonly':[('state','!=','draft')]}"
                        />
                        <field name="sent" widget="button_toggle" />
                    </group>
                    <group>
                        <field
                            name="supplier_ids"
                            attrs="{'readonly':[('state','!=','draft')]}"
                        />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_supplier_certificate_generator" model="ir.actions.act_window">
        <field name="res_model">bao.supplier.certificate.generator</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_id"
            ref="bao_supplier_certificate.view_supplier_certificate_generator_tree"
        />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate Vendor Certificate by creating a Vendor Certificate Generator.
            </p>
        </field>
    </record>

</odoo>
