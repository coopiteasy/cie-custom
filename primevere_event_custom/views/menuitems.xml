<?xml version="1.0" ?>
<odoo>
    <!-- Show Track -->
    <record model="ir.ui.menu" id="website_event_track.menu_event_track">
        <field
            name="groups_id"
            eval="[(6,0,[ref('event.group_event_registration_desk')])]"
        />
    </record>

    <!-- Download tracks images -->

    <record model="ir.actions.act_url" id="action_track_download_images">
        <field name="name">Download Track Images</field>
        <field
            name="url"
        >/primevere_event_custom/event/1/tracks/website_image/download</field>
        <field name="target">self</field>
    </record>

    <menuitem
        id="menu_event_track_download_images"
        name="Download Track Images"
        action="action_track_download_images"
        parent="event.menu_event_configuration"
        groups="event.group_event_registration_desk"
    />


    <!-- Theme and Format -->
    <record model="ir.actions.act_window" id="action_track_theme">
        <field name="name">Track Themes</field>
        <field name="res_model">event.track.theme</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_track_format">
        <field name="name">Track Formats</field>
        <field name="res_model">event.track.format</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_event_theme"
        name="Track Theme"
        action="action_track_theme"
        parent="event.menu_event_configuration"
        groups="event.group_event_registration_desk"
    />

    <menuitem
        id="menu_event_format"
        name="Track Format"
        action="action_track_format"
        parent="event.menu_event_configuration"
        groups="event.group_event_registration_desk"
    />

</odoo>
