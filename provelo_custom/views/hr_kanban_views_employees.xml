<?xml version="1.0"?>
<odoo>
    <record id="hr_kanban_view_employee_extend" model="ir.ui.view">
        <field name="name">hr_kanban_view_phone_mail</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees" />
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <field name="work_location" position="after">
                <li t-if="record.work_email.raw_value">
                    <i class="fa fa-envelope" />
                    <field name="work_email" />
                </li>
                <li t-if="record.work_phone.raw_value">
                    <i class="fa fa-phone" />
                    <field name="work_phone" />
                </li>
                <li t-if="record.mobile_phone.raw_value">
                    <i class="fa fa-mobile" />
                    <field name="mobile_phone" />
                </li>
            </field>
            <xpath expr='//span[contains(@class, "oe_hr_attendance_status_red")]' position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr='//span[contains(@class, "oe_hr_attendance_status_green")]' position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
