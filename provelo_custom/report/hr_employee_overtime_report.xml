<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="hr_employee_action_overtime" model="ir.actions.act_window">
            <field name="name">Overtime by Employee</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">pivot</field>
        </record>

        <record id="view_overtime_pivot" model="ir.ui.view">
            <field name="name">hr.employee.pivot</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <pivot string="Overtime">
                    <field name="department_id" type="row" />
                    <field name="name" type="row" />
                    <field
                        name="total_overtime"
                        type="measure"
                        widget="timesheet_uom"
                        string="Hours"
                    />
                </pivot>
            </field>
        </record>

        <record id="hr_employee_report_view_search" model="ir.ui.view">
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
              <search>
                <filter
                        name="group_user"
                        string="By Department"
                        context="{'group_by': 'department_id'}"
                    />
                <filter
                        name="group_user"
                        string="By Employee"
                        context="{'group_by': 'name'}"
                    />
              </search>
            </field>
          </record>

        <menuitem
            id="hr_employee_menu"
            parent="hr_timesheet.menu_timesheets_reports"
            action="hr_employee_action_overtime"
            name="Overtime by employee"
            sequence="999"
        />
    </data>
</odoo>
