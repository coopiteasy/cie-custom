<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">beesdoo.purchase.order.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree"
                   position="attributes">
                <attribute name="limit">200</attribute>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field/form//field[@name='product_id']"
                   position="attributes">
                <attribute name="context">{
                    'partner_id': parent.partner_id,
                    'form_view_ref': 'beesdoo_product.beesdoo_product_form'
                    }
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
